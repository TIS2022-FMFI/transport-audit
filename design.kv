#:import Factory kivy.factory.Factory

<MySpinnerOption@SpinnerOption>:
    background_color: (0.18,0.23,0.79, 1)
    color: (1, 1, 1, 1)

<MyButton@Button>:
    fonty_size: 60
    background_color:rgba('#021D49')
    color:(1, 1, 1, 1)
    size_hint:(1, 0.5)
    pos:(0, 0)
    pos_hint:{"bottom": 0}

<MyTextInput@TextInput>:
    hint_font_size: '16sp'
    background_color:rgba('#999999')
    hint_text_color:(0,0,0,1)
    multiline: False
    size_hint_y: None
    height: '30sp'
    font_size: '15sp'
    halign: 'center'
    pos_hint: {'center_x': 0.5, 'center_y': 0.705}

<MySpinner@Spinner>:
    fonty_size:'20sp'
    background_color:rgba('#BDD6E6')
    color:(1, 1, 1, 1)
    size_hint:(1, 0.3)
    pos_hint:{"bottom": 0}
    option_cls: Factory.get("MySpinnerOption")

<Menu_screen>
    BoxLayout:
        padding: [0, '250sp', 0, 0]
        orientation: 'vertical'
        spacing:'30sp'
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'bgwithLogo.png'




        BoxLayout:
            spacing:'12sp'
            orientation: 'vertical'
            MyButton:
                id: MSbtn1
                text: "Zamestnanci"
                on_press: root.call_Workers_settings()
            MyButton:
                id: MSbtn2
                text: "Zakaznici"
                on_press: root.call_Customers_settings()
            MyButton:
                id: MSbtn3
                text: "Vozidla"
                on_press: root.call_Vehicles_settings()
            MyButton:
                id: MSbtn4
                text: "Pattern"
                on_press: root.call_Patterns_settings()
            MyButton:
                id: MSbtn5
                text: "Config"
                on_press: root.call_Configs_settings()
            MyButton:
                id: MSbtn6
                text: "Export Settings"
                on_press: root.call_Exportss_settings()
        MyButton:
            id: MSbtn7
            text: "Odhlasit"
            size_hint:(1, 0.2)
            on_press: root.newclr(self)




<Settings_Workers>
    BoxLayout:
        orientation: 'vertical'
        padding: [0, '250sp', 0, 0]
        spacing:'30sp'
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'bgwithLogo.png'

        BoxLayout:
            spacing:'24sp'
            orientation: 'vertical'
            MyButton:
                text: "Pridaj"
                on_press: root.call_add()
            MyButton:
                text: "Uprav"
                on_press: root.call_edit()
            MyButton:
                text: "Vymaz"
                on_press: root.call_delete()
            MyButton:
                text: "Spat"
                on_press: root.call_back()


<MySpinnerOption@SpinnerOption>:
    background_color: (0.18,0.23,0.79, 1)
    color: (1, 1, 1, 1)

<Add_Workers>
