            MyTextInput:
                id: input
                hint_text: 'Meno'
            MyTextInput:
                id: input1
                hint_text: 'Priezvisko'
        MySpinner:
            id: spinner_id
            on_text: root.set_selected(spinner_id.text)
        BoxLayout:
            spacing:'12sp'
            orientation: 'vertical'
            MyButton:
                text: "Pridaj"
